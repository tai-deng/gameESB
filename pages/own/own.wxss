/* pages/own/own.wxss */
.container{
    width: 100vw;
    height: 100vh;
    background-color: #f2f2f2;
    padding-top: 8rpx;
}
.userTop-warp{
    background-color: #fff;
}
.userBlock{
    width: 660rpx;
    height: 267rpx;
    border-bottom: 1px solid #f2f2f2;
}
.userTop-warp > button {
    background-color: #fff;
    border: none;
    padding: 0;
}
.userTop-cnt-icon{
    border-radius: 50%;
    border: 2px solid #f2f2f2;
    position: relative;
}
.userTop-cnt-icon > .sex{
    position: absolute;
    bottom: 0;
    right: 0;
    width: 37rpx;
    height: 37rpx;
    border-radius: 50%;
}
.sex > image{
    width: 37rpx;
    height: 37rpx;
    border-radius: 50%;
    display: block;
}
.userTop-cnt-icon > image {
    width: 120rpx;
    height: 120rpx;
    display: block;
    border-radius: 50%;
}
.userTop-cnt-title{
    font-size: 34rpx;
    color: #353535;
}
.mineGame{
    padding: 0 45rpx;
    background-color: #fff;
}
.mineGame-title{
    padding: 30rpx 0;
    font-size: 30rpx;
    color: #353535;
    font-weight: 700;
}
.mineGameWarp{
    padding: 15rpx 0;
    background-color: #fff;
}
.mineGame-item{
    margin-right: 56rpx;
}
.mineGame-item-icon{
    width: 103rpx;
    height: 103rpx;
    border-radius: 50%;
    border: 1px solid #f2f2f2;
}
.mineGame-item-icon > image {
    width: 103rpx;
    height: 103rpx;
    border-radius: 50%;
    display: block;
}
.mineGame-item-title{
    width: 120rpx;
    font-size: 23rpx;
    color: #353535;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.contribute{
    margin-top: 8rpx;
    padding: 0 27rpx 0 44rpx;
    height: 100rpx;
    font-size: 30rpx;
    color: #353535;
    background: #ffffff;
    font-weight: 700;
}
.contributeR > image {
    width: 32rpx;
    height: 32rpx;
    display: block;
}